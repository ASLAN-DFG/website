---
layout: layout.njk
title: Publications
---

<h1>Publications</h1>
<div class="publications-list">
{% for pub in publications %}
  <div class="publication">
    <h3>{{ pub.title }}</h3>
    <p>
      {{ pub.authors }}<br>
      <em>{{ pub.venue }}{% if pub.year %}, {{ pub.year }}{% endif %}</em>
    </p>

    {% if pub.abstract %}
      <details><summary>Abstract</summary>
        <p>{{ pub.abstract }}</p>
      </details>
    {% endif %}

    <div class="pub-links">
      {% if pub.pdf %}
        <a href="{{ pub.pdf }}" target="_blank">PDF</a>
      {% endif %}
      {% if pub.doi %}
        <a href="https://doi.org/{{ pub.doi | url }}" target="_blank">DOI</a>
      {% endif %}
      {% if pub.url %}
        <a href="{{ pub.url }}" target="_blank">Link</a>
      {% endif %}
    </div>

  </div>
{% endfor %}
</div>